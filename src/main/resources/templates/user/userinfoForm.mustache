{{>/layout/header}}

<div class="container mt-5 mb-5">
        <form action="/join" method="post">
            <div class="form-group">
                <input type="text" class="form-control" id="uid" placeholder="id" name="uid" readonly>
            </div>
            <div class="form-group">
                <input type="password" class="form-control" id="pwd" placeholder="password" name="pswd" required>
            </div>
            <div class="form-group">
                <input type="password" class="form-control" id="new-pwd" placeholder="new password" name="new-pswd" required>
            </div>
            <button type="submit" class="btn btn-info">회원 정보 수정</button>
        </form>
</div>

{{>/layout/footer}}